<%= render 'shared/errors', obj: @hero %>
<div class="row">
  <div class="col-md-12">
    <%= form_for(@hero, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :name %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control",placeholder: "Name of recipe", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :rarity %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :rarity, class: "form-control", placeholder: "Enter steps to create recipe" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :role %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :role, class: "form-control", placeholder: "Enter steps to create recipe" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :element %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :element, class: "form-control", placeholder: "Enter steps to create recipe" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :image %>
        </div>
        <div class="col-md-8">
          <%= f.file_field :image, class: "form-control", placeholder: "Enter steps to create recipe" %>
          <br>
          <div class="frame">
            <%= image_tag(@hero.image.url, alt: 'Image') if @hero.image? %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit class: "btn btn-primary btn-lg btn-xlarge", id: "submit" %>
        </div>
      </div>

    <% end %>
    <div class="col-md-4 col-md-offset-4">
      [ <%= link_to "Cancel request and return to recipes listing", heros_path %> ]
    </div>
  </div>
</div>
