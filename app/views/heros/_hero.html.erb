<div align="center">
  <%= will_paginate %>
  <ul class="listing">
    <div class="row">
  <% obj.each do |hero| %>
    <% x = hero.rarity %>
    <div class="well col-md-3 border fondo list-fit">
      <li><%= link_to image_tag("#{hero.image}"), hero_path(hero) %> </li>
      <li><% x.times do %>
        <%= image_tag("Yellow_Star.png", :width => 20, :height => 20) %>
        <% end %>
      </li>
      <li class="user-title"><%= link_to hero.name.capitalize, hero_path(hero) %></li>
      <li><%= hero.element %></li>
      <li><small><%= pluralize(hero.recipes.count, "post") if hero.recipes %></small></li>
      <% if logged_in? && current_user.admin? %>
        <li><%= link_to "Delete this hero", hero_path(hero), method: :delete,
        data: {confirm: "Are you sure you want to delete this user and all associated recipes?"}%></li>
        <li><%= link_to "Edit this hero", edit_hero_path(hero), {:style=>'color:green;'} %></li>
      <% end %>
    </div>
  <% end %>
    </div>
  </ul>
  <%= will_paginate %>
</div>
