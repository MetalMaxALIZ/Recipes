<div align="center">
  <%= will_paginate %>
  <% obj.each do |hero| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4 border fondo">
          <li class="user-title"><%= link_to hero.name.capitalize,
                                         hero_path(hero) %></li>
    <li><small><%= pluralize(hero.recipes.count, "post") if hero.recipes %>
            </small></li>
            <% if logged_in? && current_user.admin? %>
          <li><%= link_to "Delete this hero", hero_path(hero), method: :delete,
            data: {confirm: "Are you sure you want to delete this user and all associated recipes?"}%></li>
            <li><%= link_to "Edit this hero", edit_hero_path(hero) %></li>
            <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>
